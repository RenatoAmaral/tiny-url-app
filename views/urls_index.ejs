<!DOCTYPE html>
<html lang="en">

  <head>

    <title>TinyApp</title>

  </head>
  <body>

    <header>

      <% include ./partials/_header.ejs %>

    </header>

    <main>

      <% if (user) { %>

      <h2>Your URLs</h2>

      <table cellspacing='10'>

        <thead>

          <th colspan='2'>Original URL</th>

          <th>Shortened URL</th>

        </thead>

        <tbody>

          <% for(let i in urls) { %>

            <tr>

              <td>

                <a href="<%=urls[i]%>"><%=urls[i]%></a>

              </td>

              <td>

                <form method='GET' action='/urls/<%=shortURLs[i]%>/'>

                  <button type="submit">Edit</button>

                </form>

              </td>

              <td>

                <a href="/u/<%=shortURLs[i]%>"><%=shortURLs[i]%></a>

              </td>

              <td>

                <form method="POST" action='/urls/<%=shortURLs[i]%>/delete'>

                  <button type="submit">Delete</button>

                </form>

              </td>

            </tr>

          <% } %>

        </tbody>

      </table>

      <% } %>

      <p id='addURL'><a href="/urls/new">Shorten a new URL</a></p>

    </main>

  </body>

</html>





